<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- head/meta goes here -->
        {% include "./_parts/head.njk" %}
        <!-- // -->
    </head>
    <body>
        <header>
            <!-- Header goes here -->
            {% include "./_parts/header.njk" %}
            <!-- // -->
        </header>
        <content id="page">
            <section id="page_content">     
                <div class="page-title-image">
                    {% if page.url.includes("managed-settings") %}
                    {% include "./_assets/img/bayton_logos/managed_settings_hero.svg" %}
                    {% elif page.url.includes("beam") %}
                    {% include "./_assets/img/bayton_logos/beam_hero.svg" %}
                    {% else %}
                    {% include "./_assets/img/bayton_logos/project_placeholder.svg" %}
                    {% endif %}
                </div>
                <div class="post-block-extra">
                    <div class="project-grid">
                        <div class="project-grid-left">
                            <h2 class="section-title base-title project-title">
                                {{ title }}
                            </h2>
                            {% if content | toc %}
                            <div id="mobile_toc">
                                <details>
                                    <summary>Contents</summary>
                                    {{ content | toc | safe }}
                                </details>
                            </div>
                            {% endif %}
                            {{ content | safe }}
                        </div>
                        <div class="project-grid-right">
                            {% if page.url.includes("managed-settings") %}
                            {% renderFile "./_src/projects/managed-settings/grid-right.md" %}
                            {% elif page.url.includes("beam") %}
                            {% renderFile "./_src/projects/beam/grid-right.md" %}
                            {% endif %}
                            {% if categories %}
                            <!--div class="padding-30 padding-lr-0">
                                <hr>
                                Associated topics:
                                {% for category in categories %}
                                <a class="blood-orange" href="/tags/{{ category | slugify }}/">{{category}}</a> 
                                {% endfor %}
                            </div-->
                            {% endif %}
            </section>

            <!-- Page feedback goes here -->
            {% include "./_parts/feedback.njk" %}
            <!-- // -->
            {% if type.includes("documentation") or type.includes("post") %}
            <section id="mobile_aside"> 
                {% if type.includes("documentation") %}
                <div class="aside-section">
                    <!-- Docnav goes here -->
                    {% include "./_parts/docsnav.njk" %}
                    <!-- // -->
                </div>
                {% endif %}
                {% if type.includes("post") %}
                <div class="aside-section">
                    {% include "./_parts/blognav.njk" %}
                </div>
                {% endif %}
            </section>
            {% endif %}
        </content>
        <footer>
            <!-- Footer goes here -->
            {% include "./_parts/footer.njk" %}
            <!-- // -->
        </footer>
    </body>
</html>